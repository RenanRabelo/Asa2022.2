FROM ubuntu:20.04

RUN apt update

RUN apt upgrade -y

RUN apt install postfix vim dnsutils iputils-ping telnet -y

COPY main.cf /etc/postfix

# Add User
RUN useradd -c 'User Bob' -m -s /bin/false bob
RUN useradd -c 'User Jeff' -m -s /bin/false jeff

# Set user passord
RUN echo "pwd123" | chpasswd bob
RUN echo "pwd123" | chpasswd jeff

CMD ["postfix", "start-fg"]
